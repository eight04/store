{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "target": "esnext",

    "declaration": true,
    "declarationMap": true
  }
}
