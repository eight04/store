{
  "compilerOptions": {
    "composite": true,
    "module": "nodenext",
    "newLine": "lf",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,

    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
